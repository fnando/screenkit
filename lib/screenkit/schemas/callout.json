{
  "$id": "https://github.com/fnando/screenkit/schemas/callout.json",
  "title": "ScreenKit Callout Item Configuration",
  "description": "Schema for individual callout configuration with required positioning and animation",
  "type": "object",
  "required": ["in_transition", "out_transition", "anchor", "margin"],
  "properties": {
    "style": {
      "type": "string",
      "description": "Callout style name (defaults to 'default')",
      "default": "default"
    },
    "in_transition": {
      "$ref": "#/$defs/transition"
    },
    "out_transition": {
      "$ref": "#/$defs/transition"
    },
    "anchor": {
      "type": "array",
      "description": "Anchor position [vertical, horizontal]",
      "items": {
        "type": "string",
        "enum": ["top", "center", "bottom", "left", "right"]
      },
      "minItems": 2,
      "maxItems": 2
    },
    "margin": {
      "$ref": "refs/spacing.json"
    }
  },
  "$defs": {
    "transition": {
      "type": "object",
      "description": "Transition configuration",
      "required": ["duration", "sound", "animation"],
      "properties": {
        "duration": {
          "type": "number",
          "description": "Transition duration in seconds",
          "minimum": 0
        },
        "sound": {
          "$ref": "#/$defs/soundConfig"
        },
        "animation": {
          "$ref": "#/$defs/animationType"
        },
        "motion_blur": {
          "type": "boolean",
          "default": true,
          "description": "Whether to apply motion blur to the transition animation"
        }
      }
    },
    "animationType": {
      "type": "string",
      "description": "Animation type",
      "enum": [
        "slide_left",
        "slide_right",
        "slide_up",
        "slide_down",
        "fade_in",
        "fade_out"
      ]
    },
    "soundConfig": {
      "oneOf": [
        {
          "type": "string",
          "description": "Sound name (without extension)"
        },
        {
          "type": "object",
          "description": "Sound configuration with volume",
          "required": ["name", "volume"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Sound name (without extension)"
            },
            "volume": {
              "type": "number",
              "description": "Volume level (0.0 to 1.0)",
              "minimum": 0,
              "maximum": 1
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}
