{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://screenkit.dev/schemas/refs/tts.json",
  "title": "The TTS engine used for voiceover",
  "oneOf": [
    {
      "type": "boolean",
      "enum": [false]
    },
    {
      "type": "object",
      "$ref": "../tts/say.json",
      "properties": {
        "engine": {
          "type": "string",
          "enum": ["say"],
          "description": "The TTS engine to use"
        }
      }
    },
    {
      "type": "object",
      "$ref": "../tts/elevenlabs.json",
      "properties": {
        "engine": {
          "type": "string",
          "enum": ["elevenlabs"],
          "description": "The TTS engine to use"
        }
      }
    },
    {
      "type": "object",
      "required": ["engine"],
      "additionalProperties": true,
      "properties": {
        "engine": {
          "type": "string",
          "description": "The TTS engine to use",
          "not": {
            "enum": ["say", "elevenlabs"]
          }
        }
      }
    }
  ]
}
