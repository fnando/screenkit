{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://github.com/fnando/screenkit/schemas/callouts/basic.json",
  "title": "ScreenKit Basic Callout Configuration",
  "description": "Schema for basic callout style configuration",
  "type": "object",
  "required": [
    "background_color",
    "body_style",
    "padding",
    "shadow_color",
    "title_style"
  ],
  "properties": {
    "width": {
      "type": "number",
      "description": "The callout width"
    },
    "background_color": {
      "type": "string",
      "description": "Background color (hex format with optional alpha)",
      "pattern": "^#[0-9a-fA-F]{6}([0-9a-fA-F]{2})?$"
    },
    "shadow_color": {
      "description": "Shadow color (hex format with optional alpha)",
      "$ref": "../refs/color.json"
    },
    "title_style": {
      "$ref": "#/$defs/textStyle"
    },
    "body_style": {
      "$ref": "#/$defs/textStyle"
    },
    "padding": {
      "$ref": "../refs/spacing.json"
    }
  },
  "additionalProperties": true,
  "$defs": {
    "textStyle": {
      "type": "object",
      "description": "Text styling configuration",
      "required": ["color", "size", "font_path"],
      "properties": {
        "color": {
          "description": "Text color (hex format with optional alpha)",
          "$ref": "../refs/color.json"
        },
        "size": {
          "type": "integer",
          "description": "Font size in pixels",
          "minimum": 1
        },
        "font_path": {
          "type": "string",
          "description": "Path to the font file"
        }
      },
      "additionalProperties": false
    }
  }
}
